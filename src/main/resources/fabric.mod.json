{
  "schemaVersion": 1,
  "id": "amethystadditions",
  "version": "${version}",

  "name": "Amethyst Additions",
  "description": "Amethyst Additions is a Fabric mod for 1.17.1 Minecraft that adds new amethyst tools and armor that can be upgraded with diamonds and netherite.",
  "authors": [
    "BoboimoMods"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT",
  "icon": "assets/amethystadditions/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.boboimo.amethystadditions.AmethystAdditions"
    ]
  },
  "mixins": [
    "amethystadditions.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
